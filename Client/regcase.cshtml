@model MVCBarcounsil.Models.caseinfo

@{
    ViewBag.Title = "regcase";
    Layout = "~/Views/Shared/ClientsMaster.cshtml";
}

<h2 style="text-align:center">Register Case</h2>

@using (Html.BeginForm("upload", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="col-md-3"> </div>
    <div class="col-md-6"> 
    <fieldset>
        <legend></legend>
      
        
       <div class="col-md-12">
              <div class="editor-label">
          
           
               <div class="col-md-12" style="height:10px"></div>
        </div>
            <div class="editor-field">
           
         @Html.HiddenFor(m => Model.advid, new { @id = "LoginName", @class = "form-control",@readonly="readonly", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;background-color:#d1c4c2;" })
                 @Html.HiddenFor(m => Model.fee, new { @id = "LoginName", @class = "form-control",@readonly="readonly", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;background-color:#d1c4c2;" })
                 @Html.HiddenFor(m => Model.advimg, new { @id = "LoginName", @class = "form-control",@readonly="readonly", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;background-color:#d1c4c2;" })


       
             </div>
               <div class="editor-label">
          
            @Html.LabelFor(model => model.advname)
               <div class="col-md-12" style="height:10px"></div>
        </div>
            <div class="editor-field">
           
         @Html.TextBoxFor(m => Model.advname, new { @id = "LoginName", @class = "form-control",@readonly="readonly", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;background-color:#d1c4c2;readonly" })
         @Html.ValidationMessageFor(model => model.advname,null, new { style = "color: red" })
             </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.category)
               <div class="col-md-12" style="height:10px"></div>
        </div>
        <div class="editor-field">
           
         @Html.TextBoxFor(m => Model.category, new { @id = "LoginName", @class = "form-control",@readonly="readonly", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;background-color:#d1c4c2;readonly" })
         @Html.ValidationMessageFor(model => model.category,null, new { style = "color: red" })
             </div>

      

        <div class="editor-label">
            @Html.LabelFor(model => model.court)
               <div class="col-md-12" style="height:10px"></div>
        </div>
        <div class="editor-field">
             @Html.TextBoxFor(m => Model.court , new { @id = "LoginName", @class = "form-control", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;" })
            @Html.ValidationMessageFor(model => model.court,null, new { style = "color: red" })
               <div class="col-md-12" style="height:10px"></div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
               <div class="col-md-12" style="height:10px"></div>
        </div>
        <div class="editor-field">
              @Html.TextAreaFor(m => Model.description, new { @id = "LoginName", @class = "form-control",@type="text", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;height:100px" })
            @Html.ValidationMessageFor(model => model.description,null, new { style = "color: red" })
               <div class="col-md-12" style="height:10px"></div>
        </div>
           

           <div class="editor-label">
               @Html.LabelFor(model => model.files)
               <div class="col-md-12" style="height:10px"></div>
           </div>
           <div class="editor-field">
               @Html.TextBoxFor(m => Model.files, new { @id = "LoginName", @type = "file", @class = "form-control", @style = "float:left;margin-right:10px;margin-top:-5px;border-color:green;" })
               @Html.ValidationMessageFor(model => model.files, null, new { style = "color: red" })
               <div class="col-md-12" style="height:10px"></div>
           </div>


       

      
     
          <div class="col-md-12" style="height:50px"> </div>
           <input type="submit" class="btn btn-success" style="width:100%" value="Submit" />
     

     

        
</div>
    

        <div class="col-md-12" style="height:70px"> </div>

      
    </fieldset>
  </div>
     
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


